#include <iostream>
#include <vector>
#include <climits>
using namespace std;

int N;
int bestCost = INT_MAX;
vector<int> bestAssign;

void branchAndBound(int dev, vector<vector<int>>& cost, vector<int>& currAssign,
                    vector<bool>& usedProj, int currCost) {

    if (dev == N) {
        if (currCost < bestCost) {
            bestCost = currCost;
            bestAssign = currAssign;
        }
        return;
    }

    if (currCost >= bestCost) return;

    for (int proj = 0; proj < N; proj++) {
        if (!usedProj[proj]) {
            usedProj[proj] = true;
            currAssign[dev] = proj;

            branchAndBound(dev + 1, cost, currAssign, usedProj,
                           currCost + cost[dev][proj]);

            usedProj[proj] = false;
        }
    }
}

int main() {
    cout << "Enter number of developers/projects: ";
    cin >> N;

    vector<vector<int>> cost(N, vector<int>(N));
    cout << "Enter the " << N << "x" << N << " cost matrix:\n";

    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            cin >> cost[i][j];

    vector<int> currAssign(N);
    vector<bool> usedProj(N, false);

    branchAndBound(0, cost, currAssign, usedProj, 0);

    cout << "\nMinimum Total Assignment Cost = " << bestCost << "\n";
    cout << "Developer â†’ Project assignment:\n";

    for (int i = 0; i < N; i++)
        cout << "Developer " << i << " -> Project " << bestAssign[i] << endl;

    return 0;
}
