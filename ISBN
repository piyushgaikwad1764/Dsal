class BookNode:
    def __init__(self,isbn,title):
        self.isbn = isbn
        self.title = title
        self.next = None
        
class Bookinventory:
    def __init__(self):
        self.head = None 
        
    def add_featured_book(self,isbn,title):
        new_book = BookNode(isbn, title)
        new_book.next = self.head
        self.head = new_book
        print(f"featured book'{title}' added.")
        
    def add_latest_arrival(self,isbn,title):
        new_book = BookNode(isbn,title)
        if not self.head:
            self.head = new_book
        else:
            current = self.head
            while current.next:
                current = current.next
            current.next=new_book
        print(f"Latest arrival '{title}' added.")
        
    def delete_book_by_isbn(self,isbn):
        current = self.head
        prev = None
        while current:
            if current.isbn == isbn:
                if prev:
                    prev.next = current.next
                else:
                    self.head = current.next
                print(f"book with ISBN {isbn} DELETED.")
                return
            prev = current
            current = current.next
        print(f"book with ISBN {isbn} NOT FOUND")
        
    def count_books(self):
        count = 0
        current = self.head
        while current:
            count += 1
            current = current.next
        return count
        
    def display_books(self):
        if not self.head:
            print("Inventory is empty.")
            return
        print("\nBook inventory:")
        current = self.head
        index = 1
        while current:
            tag = ""
            if current == self.head:
                tag = "(featured book)"
            elif current.next is None:
                tag = "(latest Arrival)"
            print(f"{index}. ISBN:{current.isbn}, title:'{current.title}' {tag}")
            current = current.next
            index += 1
            
if __name__ == "__main__":
    inventory = Bookinventory()
    
inventory.add_featured_book("111-000", "the great me")
inventory.add_latest_arrival("111-111", "the great us")
inventory.add_latest_arrival("111-222", "kill it")

inventory.display_books()

inventory.delete_book_by_isbn("111-111")

inventory.display_books()
print(f"\nTotal number of books: {inventory.count_books()}")


        
            
        
        
