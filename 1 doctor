morning = [] 
afternoon = []
current_id = 1 
print("Changes after Submission")
# Appointment class - ek appointment madhil details define karnyasathi
classAppointment:
def__init__(self, id, patient, time, doctor):
self.id = id
self.patient = patient 
self.time = time

self.doctor = doctor

defadd_appointment():
global current_id
patient = input("Patient's Name : ")
time= input("Time (24 Hour Format): ")
doctor = input("Doctor's Name : ")
try:
hour = int(time) # Time integer madhe convert karto (HH format)
except ValueError:
print("Invalid time format !!!")
return
appt= Appointment(current_id, patient, time, doctor)

ifhour >= 12:
afternoon.append(appt)
print("Assigned to Afternoon shift.")
else:

morning.append(appt)
print("Assigned to Morning shift.")
print(f"Appointment ID assigned: {current_id}")
current_id += 1 

defdelete_appointment(list_name):
id=int(input("Enter Id : "))
foriin range(len(list_name)):
iflist_name[i].id == id:
del list_name[i]
print("Deleted")
return
print("Not found") 
#Appointment ID varun search karnya sathi
defsearch_appointment(list_name):
id=int(input("Enter Id : "))
forappt in list_name:
ifappt.id == id:
print(f"{appt.patient} {appt.time} {appt.doctor}")
return
print("Not found")

defshow_appointments(list_name, label):
print(f"\n{label} Appointments:")
forappt in list_name:
print(f"{appt.id} {appt.patient} {appt.time} {appt.doctor}")
#Mukhya menu - user kade options asnar
defmain():
while True:
print("\n1.Add Appointment\n2.Delete Id (Morning Shift)\n3.Delete Id
(Afternoon Shift)\n4.Search Appointment (Morning Shift)\n5.Search Appointment
(Afternoon Shift)\n6.Show All\n7.Exit")
choice = input("Choice: ")
ifchoice == '1':
add_appointment()
elifchoice == '2':
delete_appointment(morning)
elifchoice == '3':
delete_appointment(afternoon)
elifchoice == '4':
search_appointment(morning)
elifchoice == '5':
search_appointment(afternoon)
elifchoice == '6':
show_appointments(morning, "Morning Shift")
show_appointments(afternoon, "Afternoon Shift")
elifchoice == '7':
print("An apple a day keeps doctor away :) 
break
else:
print("Invalid choice") 
if__name__ == "__main__":
main()
