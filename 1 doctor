List_Morning_Appointments = []
List_Afternoon_Appointments = []

def add_appointment():
    appointment_id = input("Enter Appointment ID: ")
    patient_name = input("Enter Patient Name: ")
    appointment_time = input("Enter Appointment Time (HH:MM) and date: ")
    doctor_name = input("Enter Doctor Name: ")

    appointment = [appointment_id, patient_name, appointment_time, doctor_name]

    hour = int(appointment_time.split(" ")[0].split(":")[0])
    if hour < 12:
        List_Morning_Appointments.append(appointment)
        print("Added to Morning Appointments.")
    else:
        List_Afternoon_Appointments.append(appointment)
        print("Added to Afternoon Appointments.")

def delete_appointment():
    appointment_id = input("Enter Appointment ID to delete: ")
    for lst in [List_Morning_Appointments, List_Afternoon_Appointments]:
        for appt in lst:
            if appt[0] == appointment_id:
                lst.remove(appt)
                print("Appointment deleted.")
                return
    print("Appointment not found.")

def search_appointment():
    appointment_id = input("Enter Appointment ID to search: ")
    for lst in [List_Morning_Appointments, List_Afternoon_Appointments]:
        for appt in lst:
            if appt[0] == appointment_id:
                print("Appointment Found:", appt)
                return
    print("Appointment not found.")

def display_appointments():
    print("\nMorning Appointments")
    for appt in List_Morning_Appointments:
        print(appt)

    print("\n Afternoon Appointments")
    for appt in List_Afternoon_Appointments:
        print(appt)
        
while True:
    print("\n Clinic Appointment Manager ")
    print("1. Add Appointment")
    print("2. Delete Appointment")
    print("3. Search Appointment")
    print("4. Display All Appointments")
    print("5. Exit")
    
    choice = input("Enter your choice: ")

    if choice == "1":
        add_appointment()
    elif choice == "2":
        delete_appointment()
    elif choice == "3":
        search_appointment()
    elif choice == "4":
        display_appointments()
    elif choice == "5":
        print("Exiting program.")
        break
    else:
        print("Invalid choice. Please try again.")
