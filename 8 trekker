#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n, W;
    cout << "Enter number of items: ";
    cin >> n;
    cout << "Enter knapsack capacity: ";
    cin >> W;

    vector<int> wt(n), val(n);
    cout << "Enter weight and value of each item:\n";
    for (int i = 0; i < n; i++)
        cin >> wt[i] >> val[i];

    vector<vector<int> > dp(n + 1, vector<int>(W + 1, 0));

    for (int i = 1; i <= n; i++) {
        for (int w = 1; w <= W; w++) {
            if (wt[i - 1] <= w)
                dp[i][w] = max(dp[i - 1][w], val[i - 1] + dp[i - 1][w - wt[i - 1]]);
            else
                dp[i][w] = dp[i - 1][w];
        }
    }

    cout << "\nMaximum value in knapsack = " << dp[n][W] << endl;

    cout << "\nItems included (index starting from 0):\n";
    int w = W;
    for (int i = n; i > 0; i--) {
        if (dp[i][w] != dp[i - 1][w]) {
            cout << "Item " << i - 1 << " (wt=" << wt[i - 1]
                 << ", val=" << val[i - 1] << ")\n";
            w -= wt[i - 1];
        }
    }

    return 0;
}
