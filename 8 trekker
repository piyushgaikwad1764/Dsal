#include <iostream>
#include <vector>
using namespace std;

int knapsack(int cap, const vector<int>& wt, const vector<int>& val, int n) {
    vector<vector<int>> dp(n + 1, vector<int>(cap + 1, 0));
    for (int i = 1; i <= n; ++i)
        for (int w = 0; w <= cap; ++w)
            dp[i][w] = (wt[i - 1] <= w)
                ? max(dp[i - 1][w], val[i - 1] + dp[i - 1][w - wt[i - 1]])
                : dp[i - 1][w];
    int w = cap;
    cout << "Items included: ";
    for (int i = n; i > 0; --i)
        if (dp[i][w] != dp[i - 1][w]) {
            cout << i - 1 << " ";
            w -= wt[i - 1];
        }
    cout << endl;
    return dp[n][cap];
}

int main() {
    vector<int> wt = {2, 3, 4, 5}, val = {3, 4, 5, 6};
    int cap = 5;
    cout << "Max value: " << knapsack(cap, wt, val, wt.size()) << endl;
    return 0;
}
