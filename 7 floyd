#include<iostream>
using namespace std;
#define INF 99999

int main() {
    int v, mat[10][10], d[10][10];

    cout << "Enter number of nodes: ";
    cin >> v;

    cout << "Enter adjacency matrix (use 99999 for no direct edge):\n";
    for(int i=0;i<v;i++){
        for(int j=0;j<v;j++){
            cout << "Cost from Entity " << i << " to Entity " << j << ": ";
            cin >> mat[i][j];
            d[i][j] = mat[i][j];   
        }
    }

    
    for(int k=0;k<v;k++)
        for(int i=0;i<v;i++)
            for(int j=0;j<v;j++)
                if(d[i][k] + d[k][j] < d[i][j])
                    d[i][j] = d[i][k] + d[k][j];

    cout << "\nMinimum Cost Matrix (All-Pairs Shortest Paths):\n";
    for(int i=0;i<v;i++){
        for(int j=0;j<v;j++)
            cout << d[i][j] << " ";
        cout << endl;
    }

    return 0;
}
