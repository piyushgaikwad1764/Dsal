#include <iostream>
using namespace std;

#define INF 99999

int main() {
    int n;
    cout << "Enter number of nodes: ";
    cin >> n;

    int dist[20][20];

    cout << "Enter adjacency matrix (use " << INF << " for no connection):\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            cin >> dist[i][j];

    for (int k = 0; k < n; k++)
        for (int i = 0; i < n; i++)
            for (int j = 0; j < n; j++)
                if (dist[i][k] + dist[k][j] < dist[i][j])
                    dist[i][j] = dist[i][k] + dist[k][j];

    cout << "\nShortest distances between all pairs:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            if (dist[i][j] == INF) cout << "INF ";
            else cout << dist[i][j] << " ";
        cout << endl;
    }

    return 0;
}

